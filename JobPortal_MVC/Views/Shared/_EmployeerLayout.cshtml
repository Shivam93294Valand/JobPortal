<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employer Dashboard</title>

    <!-- Dependencies -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Google Fonts - Plus Jakarta Sans -->
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* =================================================================
                           THEME VARIABLES & CORE LAYOUT
                           ================================================================= */
        :root, [data-bs-theme="light"] {
            --theme-bg-surface-1: #ffffff;
            --theme-bg-surface-2: #f5f8fa;
            --theme-border-color: #e5eaef;
            --theme-text-primary: #1a2b4e;
            --theme-text-secondary: #6b7a99;
            --theme-text-brand: #4361ee;
            --theme-brand-gradient: linear-gradient(135deg, #4361ee, #3a86ff);
            --theme-brand-accent-bg: #edf0fd;
            --theme-card-bg: #ffffff;
            --theme-card-border: #e5eaef;
            --theme-card-shadow: 0px 1px 3px rgba(16, 24, 40, 0.05);
            --theme-sidebar-width: 80px;
            --theme-sidebar-expanded: 240px;
        }

        [data-bs-theme="dark"] {
            --theme-bg-surface-1: #121826;
            --theme-bg-surface-2: #0f1521;
            --theme-border-color: #2a3245;
            --theme-text-primary: #e5e9f0;
            --theme-text-secondary: #9aa4bd;
            --theme-text-brand: #6078ff;
            --theme-brand-gradient: linear-gradient(135deg, #6078ff, #5983ff);
            --theme-brand-accent-bg: #1d2942;
            --theme-card-bg: #1a2234;
            --theme-card-border: #2a3245;
            --theme-card-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
        }

        /* Base Styles */
        body {
            font-family: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            background-color: var(--theme-bg-surface-2);
            color: var(--theme-text-primary);
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            min-height: 100vh;
            transition: background-color 0.3s ease;
            position: relative;
        }

        /* === LAYOUT === */
        .app-container {
            display: flex;
            min-height: 100vh;
        }

        /* === ENHANCED APP SIDEBAR WITH AUTO-SLIDE === */
        .app-sidebar {
            width: var(--theme-sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: var(--theme-bg-surface-1);
            border-right: 1px solid var(--theme-border-color);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1.5rem 0;
            z-index: 1000;
            transition: width 0.3s ease;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.03);
        }

            .app-sidebar:hover {
                width: var(--theme-sidebar-expanded);
            }

        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 0 1rem;
            margin-bottom: 2rem;
        }

        .app-logo {
            min-width: 48px;
            height: 48px;
            background: var(--theme-brand-gradient);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            box-shadow: 0 6px 12px -2px rgba(67, 97, 238, 0.3);
            transition: transform 0.3s ease;
        }

        .app-sidebar:hover .app-logo {
            transform: scale(1.05);
        }

        .logo-text {
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--theme-text-primary);
            margin-left: 1rem;
            white-space: nowrap;
            opacity: 0;
            transition: opacity 0.3s ease, transform 0.3s ease;
            transform: translateX(10px);
        }

        .app-sidebar:hover .logo-text {
            opacity: 1;
            transform: translateX(0);
        }

        .app-nav {
            display: flex;
            flex-direction: column;
            width: 100%;
            padding: 0 0.75rem;
            gap: 0.5rem;
        }

        .nav-item {
            width: 100%;
        }

        .nav-link {
            display: flex;
            align-items: center;
            height: 48px;
            border-radius: 12px;
            color: var(--theme-text-secondary);
            text-decoration: none;
            transition: all 0.3s ease;
            padding: 0 1rem;
            white-space: nowrap;
            position: relative;
        }

            .nav-link:hover {
                color: var(--theme-text-brand);
                background-color: var(--theme-brand-accent-bg);
            }

            .nav-link.active {
                color: white;
                background: var(--theme-brand-gradient);
                box-shadow: 0 4px 10px rgba(67, 97, 238, 0.3);
            }

        .nav-icon {
            font-size: 1.25rem;
            min-width: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.3s ease;
        }

        .app-sidebar:not(:hover) .nav-link:hover .nav-icon {
            transform: scale(1.15);
        }

        .nav-text {
            font-size: 0.9375rem;
            font-weight: 500;
            opacity: 0;
            transform: translateX(10px);
            transition: all 0.3s ease;
        }

        .app-sidebar:hover .nav-text {
            opacity: 1;
            transform: translateX(0);
        }

        .nav-divider {
            height: 1px;
            background-color: var(--theme-border-color);
            margin: 0.75rem 0;
            width: 100%;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .app-sidebar:hover .nav-divider {
            opacity: 1;
        }

        /* Beautiful indicator for active state when collapsed */
        .app-sidebar:not(:hover) .nav-link.active::before {
            content: '';
            position: absolute;
            left: -0.75rem;
            top: 50%;
            transform: translateY(-50%);
            width: 4px;
            height: 24px;
            background: var(--theme-brand-gradient);
            border-radius: 0 4px 4px 0;
        }

        /* === MAIN CONTENT === */
        .main-content {
            flex: 1;
            margin-left: var(--theme-sidebar-width);
            padding: 1.5rem;
            transition: margin-left 0.3s ease;
            min-height: 100vh;
        }

        .app-sidebar:hover ~ .main-content {
            margin-left: var(--theme-sidebar-expanded);
        }

        /* === HEADER === */
        .content-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--theme-border-color);
        }

        .page-info {
            display: flex;
            flex-direction: column;
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--theme-text-primary);
            margin: 0 0 0.375rem 0;
        }

        .page-subtitle {
            font-size: 0.875rem;
            color: var(--theme-text-secondary);
        }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .action-button {
            width: 42px;
            height: 42px;
            border-radius: 10px;
            background-color: var(--theme-bg-surface-1);
            border: 1px solid var(--theme-border-color);
            color: var(--theme-text-secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: var(--theme-card-shadow);
        }

            .action-button:hover {
                color: var(--theme-text-brand);
                background-color: var(--theme-brand-accent-bg);
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(67, 97, 238, 0.15);
            }

        .theme-toggle {
            width: 42px;
            height: 42px;
            border-radius: 10px;
            background-color: var(--theme-bg-surface-1);
            border: 1px solid var(--theme-border-color);
            color: var(--theme-text-secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: var(--theme-card-shadow);
        }

            .theme-toggle:hover {
                color: var(--theme-text-brand);
                background-color: var(--theme-brand-accent-bg);
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(67, 97, 238, 0.15);
            }

        .profile-dropdown {
            position: relative;
        }

        .profile-button {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--theme-bg-surface-1);
            border: 1px solid var(--theme-border-color);
            border-radius: 10px;
            padding: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: var(--theme-card-shadow);
        }

            .profile-button:hover {
                background-color: var(--theme-brand-accent-bg);
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(67, 97, 238, 0.15);
            }

        .profile-avatar {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            background: var(--theme-brand-gradient);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .profile-menu {
            position: absolute;
            top: calc(100% + 0.75rem);
            right: 0;
            background-color: var(--theme-bg-surface-1);
            border: 1px solid var(--theme-border-color);
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            min-width: 200px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(10px);
            transition: all 0.2s ease;
            z-index: 1000;
            overflow: hidden;
        }

        .profile-dropdown:hover .profile-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .profile-menu-header {
            padding: 1rem;
            border-bottom: 1px solid var(--theme-border-color);
        }

        .profile-name {
            font-weight: 600;
            font-size: 0.9375rem;
            color: var(--theme-text-primary);
            margin-bottom: 0.25rem;
        }

        .profile-email {
            font-size: 0.8125rem;
            color: var(--theme-text-secondary);
        }

        .profile-menu-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: var(--theme-text-primary);
            text-decoration: none;
            transition: all 0.2s ease;
        }

            .profile-menu-item:hover {
                background-color: var(--theme-brand-accent-bg);
                color: var(--theme-text-brand);
            }

            .profile-menu-item i {
                margin-right: 0.75rem;
                width: 1.25rem;
                text-align: center;
            }

        .profile-menu-divider {
            height: 1px;
            background-color: var(--theme-border-color);
            margin: 0.5rem 0;
        }

        /* === CARDS === */
        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .app-card {
            background-color: var(--theme-card-bg);
            border: 1px solid var(--theme-card-border);
            border-radius: 16px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            height: 100%;
            box-shadow: var(--theme-card-shadow);
        }

            .app-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
            }

        .card-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: var(--theme-brand-gradient);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.2);
        }

        .card-title {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--theme-text-primary);
        }

        .card-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--theme-text-primary);
            margin-bottom: 0.5rem;
        }

        .card-subtitle {
            font-size: 0.875rem;
            color: var(--theme-text-secondary);
        }

        /* === MOBILE STYLES === */
        .mobile-nav {
            display: none;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: var(--theme-bg-surface-1);
            border-top: 1px solid var(--theme-border-color);
            z-index: 1000;
            padding: 0.75rem 1rem;
            box-shadow: 0 -5px 25px rgba(0, 0, 0, 0.05);
        }

        .mobile-nav-inner {
            display: flex;
            justify-content: space-around;
        }

        .mobile-nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: var(--theme-text-secondary);
            text-decoration: none;
            padding: 0.5rem;
            transition: all 0.2s ease;
        }

            .mobile-nav-item:hover, .mobile-nav-item.active {
                color: var(--theme-text-brand);
                transform: translateY(-3px);
            }

        .mobile-nav-icon {
            font-size: 1.25rem;
            margin-bottom: 0.25rem;
        }

        .mobile-nav-text {
            font-size: 0.7rem;
            font-weight: 500;
        }

        @@media (max-width: 991.98px) {
            .app-sidebar {
                display: none;
            }

            .main-content {
                margin-left: 0 !important;
                padding-bottom: 5rem; /* Space for mobile nav */
            }

            .mobile-nav {
                display: block;
            }

            .content-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .header-actions {
                width: 100%;
                justify-content: flex-end;
            }
        }
    </style>
</head>
<body>
    <div class="app-container">
        <!-- Enhanced App Sidebar with Auto-Slide -->
        <aside class="app-sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <div class="app-logo">
                    <i class="fa-solid fa-briefcase"></i>
                </div>
                <div class="logo-text">Employer</div>
            </div>

            <!-- App Navigation -->
            <nav class="app-nav">
                <!-- Main Navigation Links -->
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Employeer" asp-action="Dashboard">
                        <div class="nav-icon">
                            <i class="fa-solid fa-house-chimney"></i>
                        </div>
                        <span class="nav-text">Dashboard</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Employeer" asp-action="JobsList">
                        <div class="nav-icon">
                            <i class="fa-solid fa-newspaper"></i>
                        </div>
                        <span class="nav-text">Job Postings</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Employeer" asp-action="CompaniesList">
                        <div class="nav-icon">
                            <i class="fa-solid fa-building"></i>
                        </div>
                        <span class="nav-text">Companies</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Employeer" asp-action="CategoryList">
                        <div class="nav-icon">
                            <i class="fa-solid fa-tags"></i>
                        </div>
                        <span class="nav-text">Categories</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Employeer" asp-action="SkillsList">
                        <div class="nav-icon">
                            <i class="fa-solid fa-wand-magic-sparkles"></i>
                        </div>
                        <span class="nav-text">Skills</span>
                    </a>
                </div>

                <!-- Settings Section -->
                <div class="nav-divider"></div>

                <div class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="nav-icon">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <span class="nav-text">Profile</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="nav-icon">
                            <i class="fa-solid fa-gear"></i>
                        </div>
                        <span class="nav-text">Settings</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Logout">
                        <div class="nav-icon">
                            <i class="fa-solid fa-right-from-bracket"></i>
                        </div>
                        <span class="nav-text">Sign Out</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Content Header -->
            <div class="content-header">
                <div class="page-info">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                    <p class="page-subtitle">Welcome to your employer dashboard</p>
                </div>

                <!-- Header Actions -->
                <div class="header-actions">
                    <!-- Notification Button -->
                    <button class="action-button">
                        <i class="fa-solid fa-bell"></i>
                    </button>

                    <!-- Theme Toggle -->
                    <button class="theme-toggle" id="theme-toggle">
                        <i class="fa-solid fa-sun" id="theme-icon-sun"></i>
                        <i class="fa-solid fa-moon" id="theme-icon-moon" style="display: none;"></i>
                    </button>

                    <!-- Profile Button -->
                    <div class="profile-dropdown">
                        <div class="profile-button">
                            <div class="profile-avatar">JD</div>
                        </div>
                        <div class="profile-menu">
                            <div class="profile-menu-header">
                                <div class="profile-name">John Doe</div>
                                <div class="profile-email">john.doe@example.com</div>
                            </div>
                            <a href="#" class="profile-menu-item">
                                <i class="fa-solid fa-user"></i>
                                My Profile
                            </a>
                            <a href="#" class="profile-menu-item">
                                <i class="fa-solid fa-gear"></i>
                                Settings
                            </a>
                            <div class="profile-menu-divider"></div>
                            <a asp-controller="Account" asp-action="Logout" class="profile-menu-item">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                Sign Out
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Page Content -->
            @RenderBody()
        </div>

        <!-- Mobile Navigation -->
        <nav class="mobile-nav">
            <div class="mobile-nav-inner">
                <a class="mobile-nav-item" asp-controller="Employeer" asp-action="Dashboard">
                    <div class="mobile-nav-icon">
                        <i class="fa-solid fa-house-chimney"></i>
                    </div>
                    <div class="mobile-nav-text">Dashboard</div>
                </a>
                <a class="mobile-nav-item" asp-controller="Employeer" asp-action="JobsList">
                    <div class="mobile-nav-icon">
                        <i class="fa-solid fa-newspaper"></i>
                    </div>
                    <div class="mobile-nav-text">Jobs</div>
                </a>
                <a class="mobile-nav-item" asp-controller="Employeer" asp-action="CompaniesList">
                    <div class="mobile-nav-icon">
                        <i class="fa-solid fa-building"></i>
                    </div>
                    <div class="mobile-nav-text">Companies</div>
                </a>
                <a class="mobile-nav-item" asp-controller="Employeer" asp-action="CategoryList">
                    <div class="mobile-nav-icon">
                        <i class="fa-solid fa-tags"></i>
                    </div>
                    <div class="mobile-nav-text">Categories</div>
                </a>
                <a class="mobile-nav-item" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="mobile-nav-icon">
                        <i class="fa-solid fa-ellipsis"></i>
                    </div>
                    <div class="mobile-nav-text">More</div>
                </a>
                <div class="dropdown-menu dropdown-menu-end shadow">
                    <a class="dropdown-item" asp-controller="Employeer" asp-action="SkillsList">
                        <i class="fa-solid fa-wand-magic-sparkles me-2"></i> Skills
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#"><i class="fa-solid fa-user me-2"></i> Profile</a>
                    <a class="dropdown-item" href="#"><i class="fa-solid fa-gear me-2"></i> Settings</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-right-from-bracket me-2"></i> Sign out</a>
                </div>
            </div>
        </nav>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // --- THEME TOGGLE SCRIPT ---
        (() => {
            const themeToggleBtn = document.getElementById('theme-toggle');
            const sunIcon = document.getElementById('theme-icon-sun');
            const moonIcon = document.getElementById('theme-icon-moon');
            const htmlElement = document.documentElement;

            function applyTheme(theme) {
                // We're toggling which icon is VISIBLE.
                // In light mode, you see the MOON icon (to switch to dark).
                // In dark mode, you see the SUN icon (to switch to light).
                if (theme === 'dark') {
                    htmlElement.setAttribute('data-bs-theme', 'dark');
                    sunIcon.style.display = 'inline-block';
                    moonIcon.style.display = 'none';
                } else {
                    htmlElement.setAttribute('data-bs-theme', 'light');
                    sunIcon.style.display = 'none';
                    moonIcon.style.display = 'inline-block';
                }
            }

            // Corrected theme toggle logic on button
            themeToggleBtn.addEventListener('click', () => {
                const currentTheme = htmlElement.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                localStorage.setItem('theme', newTheme);
                applyTheme(newTheme);
            });

            // Apply saved theme or system preference on initial load
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            applyTheme(savedTheme);

        })();

        // --- ACTIVE NAV LINK SCRIPT ---
        document.addEventListener("DOMContentLoaded", function () {
            const currentPath = window.location.pathname;

            // Desktop nav links
            document.querySelectorAll('.app-nav .nav-link').forEach(link => {
                if (link.getAttribute('asp-action')) {
                     // A more robust check for matching controller and action could be done here if needed
                    const linkPath = new URL(link.href, window.location.origin).pathname;
                    if (currentPath.toLowerCase() === linkPath.toLowerCase()) {
                        link.classList.add('active');
                    }
                }
            });

            // Mobile nav links
            document.querySelectorAll('.mobile-nav-item').forEach(link => {
                if (link.getAttribute('asp-action')) {
                    const linkPath = new URL(link.href, window.location.origin).pathname;
                     if (currentPath.toLowerCase() === linkPath.toLowerCase()) {
                        link.classList.add('active');
                    }
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>