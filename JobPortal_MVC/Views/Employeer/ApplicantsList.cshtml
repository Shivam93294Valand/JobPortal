        gap: 10px;
    }

    /* Applicant Table Styles */
    .applicants-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

        .applicants-table th,
