        .status-dropdown.select-applied {
            color: #3498db;
            border-color: #3498db;
            background-color: #eaf5ff;
        }

        .status-dropdown.select-shortlisted {
            color: #2ecc71;
            border-color: #2ecc71;
            background-color: #eafaf1;
        }

        .status-dropdown.select-rejected {
            color: #e74c3c;
            border-color: #e74c3c;
            background-color: #feeeee;
        }

        .status-dropdown.select-hired {
            color: #9b59b6;
            border-color: #9b59b6;
            background-color: #f3eaff;
        }


    /* Action Buttons */
    .actions-cell {
        display: flex;
        gap: 8px;
        align-items: center;
        flex-wrap: wrap; /* Allows buttons to wrap on smaller screens */
    }

    /* General Button Styles from your theme */
    .btn {
        text-decoration: none;
        padding: 8px 15px;
        border-radius: 5px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.2s ease;
        border: 1px solid transparent;
        cursor: pointer;
        white-space: nowrap; /* Prevents button text from breaking */
    }

    .btn-primary {
        background-color: #3498db;
