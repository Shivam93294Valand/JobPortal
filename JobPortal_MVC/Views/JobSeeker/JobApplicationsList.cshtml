@{
    ViewData["Title"] = "Available Job Listings";
    // Assuming a layout file for a Job Seeker. Change this if your layout has a different name.
    Layout = "~/Views/Shared/_JobSeekerLayout.cshtml";
}

<!-- Dependency: Font Awesome for the bookmark and status icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    /* Filter Panel Styles */
    .filter-panel {
        background-color: #ffffff;
        padding: 20px 25px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        margin-bottom: 30px;
    }

    .filter-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .filter-header h3 {
            margin: 0;
            font-size: 1.25rem;
            color: #2c3e50;
        }

    #filter-status-text {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: #27ae60;
    }

        #filter-status-text i {
            margin-right: 8px;
            color: #f1c40f;
        }

    .skill-filter-adder {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
    }

        .skill-filter-adder select {
            flex-grow: 1;
        }

    #active-filters-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        padding: 0;
        list-style-type: none;
        margin-top: 10px;
        min-height: 20px;
    }

    .filter-tag {
        display: inline-flex;
        align-items: center;
        background-color: #e9ecef;
        color: #495057;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .remove-tag-btn {
        background: none;
        border: none;
        color: #6c757d;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        margin-left: 8px;
        padding: 0 3px;
        line-height: 1;
    }

    /* Main Page and Job Card Styles */
    .job-list-page {
        background-color: #f4f7f6;
        padding: 20px 30px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .job-list-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 25px;
    }

    .job-card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        padding: 25px;
        transition: transform 0.2s, box-shadow 0.2s;
        border-left: 5px solid #3498db;
    }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.12);
        }

    .job-card-header h2 {
        font-size: 1.4rem;
        color: #2c3e50;
        margin: 0 0 5px 0;
    }

    .job-card-header .company-name {
        font-size: 1rem;
        font-weight: 600;
        color: #7f8c8d;
    }

    .job-card-description {
        margin: 15px 0;
        color: #566573;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .job-card-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 15px;
        color: #34495e;
        font-size: 0.95rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
    }

        .detail-item svg {
            margin-right: 8px;
            width: 18px;
            height: 18px;
            fill: #3498db;
            flex-shrink: 0;
        }

    /* Actions Bar Styling */
    .job-card-actions {
        border-top: 1px solid #ecf0f1;
        padding-top: 20px;
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .action-buttons-left {
        display: flex;
        gap: 10px;
    }

    /* Button Styles */
    .btn {
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        border: 1px solid transparent;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .btn-secondary {
        background-color: #f1f2f6;
        color: #34495e;
        border-color: #dadfe1;
    }

        .btn-secondary:hover {
            background-color: #e1e5e8;
        }

    /* Save Button Specific Styles */
    .btn-save {
        background: none;
        border: none;
        color: #95a5a6;
        font-size: 1.6rem;
        padding: 5px;
        cursor: pointer;
        transition: color 0.2s ease, transform 0.2s ease;
    }

        .btn-save:hover {
            color: #3498db;
            transform: scale(1.1);
        }

        .btn-save.saved {
            color: #f1c40f;
        }

            .btn-save.saved:hover {
                color: #e74c3c;
            }
</style>

<div class="job-list-page">
    <div class="filter-panel">
        <div class="filter-header">
            <h3>Filter Jobs</h3>
            <h4 id="filter-status-text"></h4>
        </div>
        <hr>
        <div id="skill-filter-container">
            <label class="form-label">Filter by skills:</label>
            <div class="skill-filter-adder">
                <select id="skill-select" class="form-select"></select>
                <button class="btn btn-secondary" id="add-skill-filter-btn" type="button">Add</button>
            </div>
            <ul id="active-filters-list"></ul>
        </div>
    </div>
    <div class="job-list-container">
        <!-- ===== Hardcoded Job Card 1: IS SAVED ===== -->
        <div class="job-card">
            <div class="job-card-header">
                <h2>Senior .NET Developer</h2>
                <span class="company-name">Tech Innovators LLC</span>
            </div>
            <p class="job-card-description">
                We are seeking an experienced .NET Developer to design, develop, and maintain high-quality web applications using C# and the .NET Core framework. You will be a key part of our agile team.
            </p>
            <div class="job-card-details">
                <div class="detail-item"><svg viewBox="0 0 24 24"><path d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7z"></path></svg><span>New York, NY</span></div>
