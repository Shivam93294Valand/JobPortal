@{
    ViewData["Title"] = "My Applied Jobs";
    Layout = "~/Views/Shared/_JobSeekerLayout.cshtml";
}

<style>
    /* Shared styles for the page and job cards */
    .applied-jobs-page {
        background-color: #f4f7f6;
        padding: 20px 30px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .page-header {
        margin-bottom: 30px;
    }

        .page-header h1 {
            color: #2c3e50;
            margin: 0;
        }

    .job-list-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 25px;
    }

    .job-card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        padding: 25px;
        border-left: 5px solid; /* Border color will be set by status */
    }

    .job-card-header h2 {
        font-size: 1.4rem;
        color: #2c3e50;
        margin: 0 0 5px 0;
    }

    .job-card-header .company-name {
        font-size: 1rem;
        font-weight: 600;
        color: #7f8c8d;
    }

    .job-card-description {
        margin: 15px 0;
        color: #566573;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    /* Application specific info styles */
    .job-card-application-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 6px;
        margin-top: 15px;
    }

    .applied-on-date {
        font-weight: 500;
        color: #566573;
    }

    /* NEW: Application status badge styles */
    .application-status {
        padding: 6px 14px;
        font-weight: 700;
        font-size: 0.85rem;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-applied {
        background-color: #eaf2ff;
        color: #0d6efd;
    }

    .status-shortlisted {
        background-color: #fff8e1;
        color: #f59e0b;
    }

    .status-hired {
        background-color: #e6f7ec;
        color: #10b981;
    }

    .status-rejected {
        background-color: #fee2e2;
        color: #ef4444;
    }

    /* Adjusting card border and opacity based on status */
    .job-card.applied {
        border-left-color: #0d6efd;
    }

    .job-card.shortlisted {
        border-left-color: #f59e0b;
    }

    .job-card.hired {
        border-left-color: #10b981;
    }

    .job-card.rejected {
        border-left-color: #ef4444;
        opacity: 0.7;
    }

    .job-card-actions {
        border-top: 1px solid #ecf0f1;
        padding-top: 20px;
        margin-top: 20px;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .btn {
        text-decoration: none;
        padding: 8px 15px;
        border-radius: 5px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.2s ease;
        border: 1px solid transparent;
        cursor: pointer;
    }

    .btn-secondary {
        background-color: #f1f2f6;
        color: #34495e;
    }

        .btn-secondary:hover {
            background-color: #e1e5e8;
        }

    .btn-danger {
        color: #ef4444;
    }

        .btn-danger:hover {
            background-color: #fee2e2;
        }
</style>

<div class="applied-jobs-page">

    <div class="page-header">
